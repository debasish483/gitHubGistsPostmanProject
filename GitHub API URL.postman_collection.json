{
	"info": {
		"_postman_id": "f85b2c69-d2a2-4833-96fe-e4508c91c453",
		"name": "GitHub API URL",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "/gists/{gist_id}/comments",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"var parsedResponseBody = JSON.parse(responseBody)\r",
							"tests[\"Body is NOT EMPTY\"] = (responseBody!==null)\r",
							"\r",
							"pm.test(\"Validate commentId is present\", function () {\r",
							"    pm.expect(parsedResponseBody).to.have.property(\"id\");\r",
							"});\r",
							"\r",
							"pm.test(\"Validate user field to be present\", function () {\r",
							"    pm.expect(parsedResponseBody).to.have.property(\"user\");\r",
							"});\r",
							"\r",
							"pm.test(\"Validate userId\", function () {\r",
							"    pm.expect(pm.response.json().user.login).to.eql(pm.environment.get(\"userId\"))\r",
							"});\r",
							"\r",
							"pm.test(\"Status code name has string\", () => {\r",
							"  pm.response.to.have.status(\"Created\");\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type header is present\", () => {\r",
							"  pm.response.to.have.header(\"Content-Type\");\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type header is application/json; charset=utf-8\", () => {\r",
							"  pm.expect(pm.response.headers.get('Content-Type')).to.eql('application/json; charset=utf-8');\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is less than 1s\", () => {\r",
							"  pm.expect(pm.response.responseTime).to.be.below(1000);\r",
							"});\r",
							"\r",
							"pm.test(\"Validate if body is same\", () => {\r",
							"  pm.expect(pm.response.json().body).to.eql(pm.environment.get(\"requestBody\"));\r",
							"});\r",
							"\r",
							"\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
